{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "bundler"
  },
  "references": [
    { "path": "packages/common" },
    { "path": "packages/light" },
    { "path": "packages/thermostat" },
    { "path": "packages/server" }
  ],
  "exclude": ["node_modules"]
}
